{% extends 'layouts/article.njk' %}
{% import "components/macros.njk" as components %}

{% block content %}
  <header>
    <time class="u-color-gray u-text-uppercase">{{ page.date | date_formatted }}</time>
    <h1 class="u-font-size-2xl">{{ title }}</h1>
    {% if link %}
      <p class="u-margin-top-1">
        {{ components.link({
          url: link + '?ref=alexcarpenter.me',
          external: true
        }) }}
      </p>
    {% endif %}
    {% if intro %}
      <p class="u-lead">{{ intro }}</p>
    {% endif %}
  </header>
  {% if content %}
    <div class="o-stack o-stack--prose">
      {{ content | markdownify | safe }}
    </div>
  {% endif %}
  {# {% include "components/collection-pagination.njk" %} #}
  {% include "components/share.njk" %}
  {% include "components/tags.njk" %}
{% endblock %}
