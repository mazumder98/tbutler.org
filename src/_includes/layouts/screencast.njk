{% extends 'layouts/article.njk' %}
{% import "components/macros.njk" as components %}

{% block content %}
  <header>
    <time class="u-color-gray u-text-uppercase">{{ page.date | date_formatted }}</time>
    <h1 class="u-font-size-2xl">{{ title }}</h1>
    <div class="u-margin-top-1">
      {{ components.link({
        url: site.social[0].subscribe,
        text: "Subscribe on YouTube",
        external: true
      }) }}
    </div>
  </header>
  {{ components.youtube({
    id: youtubeId,
    title: title
  }) }}
  {% if content %}
    <div class="o-stack o-stack--prose">
      {{ content | safe }}
    </div>
  {% endif %}
  {% if tags and tags | hasTag('11ty') %}
    {{ components.note({
      labelHidden: true,
      type: "primary",
      text: "Interested in learning more about Eleventy? Check out my collection of Eleventy tutorials to help you become an experienced Eleventy developer.",
      link: {
        url: "/learn/eleventy",
        text: "Learn Eleventy"
      }
    }) }}
  {% endif %}
  {# {% include "components/collection-pagination.njk" %} #}
  {% include "components/share.njk" %}
  {% include "components/tags.njk" %}
{% endblock %}
